        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resulttext"
            android:layout_gravity="center_horizontal"
            android:text="Test"
            android:textSize="24dp"
            android:textIsSelectable="false" />

    </LinearLayout>
